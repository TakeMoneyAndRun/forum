<h1>Editing topic</h1>

<%= form_for(@topic, :url => forum_topic_path(@forum)) do |f| %>
    <% if @topic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

          <ul>
            <% @topic.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <%= fields_for(@post) do |f|%>
        <div class="field">
          <%= f.label :body %><br />
          <%= f.text_area(:body, :size => "60x10")%>
        </div>
    <% end %>


    <div class="actions">
      <%= f.submit%>
    </div>
<% end %>

<%= link_to 'Show', [@forum,@topic] %> |
<%= link_to 'Back', forum_topics_path %>