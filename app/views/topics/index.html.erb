<br>
<p>
  <% if @breadcrumbs %>
      <% @breadcrumbs[0..-2].each do |txt, path| %>
          <%= link_to(h(txt), path) %> >
      <% end %>
      <%= h(@breadcrumbs.last.first) %>
  <% end %>
</p>
<br>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Last Reply</th>
    <th>Replies</th>
    <th></th>
    <th></th>
  </tr>

  <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.name, forum_topic_path(@forum,topic) %></td>
        <td><%= link_to topic.user.nickname, topic.user %></td>
        <td>
          <%= distance_of_time_in_words_to_now topic.posts.find(:last).created_at %><br />
          ago by <%= link_to topic.posts.find(:last).user.nickname, topic.posts.find(:last).user  %>
        </td>
        <td><%= topic.posts.count - 1 %></td>
        <% if admin? || moderator? || logged?(topic.user.id) %><td><%= link_to 'Edit', edit_forum_topic_path(@forum,topic) %></td><%end%>
        <% if admin? || logged?(topic.user.id) %><td><%= link_to 'Destroy', [@forum,topic], :confirm => 'Are you sure?', :method => :delete %></td><%end%>
      </tr>
  <% end %>
</table>

<br />

