<h1 id="page_title">Reply To <%= @topic.name %></h1>
<%= link_to @forum.name, forum_topics_path(@forum) %>

<%= form_for(@post, :url => forum_topic_posts_path(:forum_id=>@forum.id, :topic_id=>@topic.id)) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this reply from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area(:body, :size => "60x10")%>
    </div>


    <div class="actions">
      <%= f.submit(:value => "Create Reply")%>
    </div>
<% end %>

